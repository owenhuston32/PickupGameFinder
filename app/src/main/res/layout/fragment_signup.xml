<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.SignupFragment"
    android:tag="SignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8sp"
        android:layout_marginHorizontal="8sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup_errorMessage"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginVertical="4sp"
            android:scrollHorizontally="false"
            android:text=""
            android:textColor="@color/design_default_color_error">

        </TextView>
        <EditText
            android:id="@+id/signup_username"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:hint="username"
            android:layout_marginVertical="8sp"
            android:inputType="text"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:hint="password"
            android:layout_marginVertical="8sp"
            android:inputType="textPassword"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/signup_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:hint="confirm password"
            android:layout_marginVertical="8sp"
            android:inputType="textPassword"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/signup_create_account"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="CREATE ACCOUNT"
            android:textSize="40sp" />
    </LinearLayout>

</ScrollView>