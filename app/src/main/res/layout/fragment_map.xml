<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="MapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MapFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/map_welcome_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome abc!"
            android:textSize="50sp"/>

        <EditText
            android:id="@+id/update_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginVertical="8sp"
            android:hint="Update password"
            android:inputType="textPassword"
            android:textSize="30sp" />

        <Button
            android:id="@+id/submit_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT NEW PASSWORD"
            android:textSize="40sp" />

        <Button
            android:id="@+id/delete_account"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="DELETE ACCOUNT"
            android:textSize="40sp" />

    </LinearLayout>


</ScrollView>