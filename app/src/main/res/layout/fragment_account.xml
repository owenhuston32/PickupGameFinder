<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/account_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/account_message_button"
            android:background="@drawable/ic_baseline_mail_outline_24"
            android:backgroundTint="@color/white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATED EVENTS"
            android:textSize="40sp"
            android:textAlignment="center"/>
        <FrameLayout
            android:id="@+id/account_created_events_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOINED EVENTS"
            android:textSize="40sp"
            android:textAlignment="center"/>
        <FrameLayout
            android:id="@+id/account_joined_events_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>