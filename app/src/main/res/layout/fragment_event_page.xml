<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.EventPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_page_event_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdf"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/event_page_player_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="50dp"/>

        <Button
            android:id="@+id/event_page_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOIN EVENT"
            android:textSize="40dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/event_page_leave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LEAVE EVENT"
            android:textSize="40dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/event_page_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETE EVENT"
            android:textSize="40dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/event_page_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RETURN TO MAP"
            android:textSize="40dp" />
    </LinearLayout>

</ScrollView>